extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/login" method='post')
    | Username
    input#loginUser(type='text' name='username')
    br
    | Password
    input#loginPassword(type='password' name='password')
    br
    button(type='submit') Log Me In
  p Register
  form(action='/register' method='post')
    | Username
    input#regUser(type='text' name='username')
    br
    | Password
    input#regPass(type='password' name='password')
    br
    | Repeat Password
    input#regPass2(type='password' name='password2')
    br
    button(type='submit') Register